<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <link rel="icon" type="image/png" href="./favicon.png" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/dashboard.style.css" />

    <script type="module" src="/scripts/helpers.js"></script>
    <script defer type="module" src="/scripts/navEventHandlers.js"></script>
    <script defer type="module" src="/scripts/dashboard.js"></script>
    <title>Pokemon App</title>
  </head>
  <body>
    <header>
      <h1>Pokemon Gallery</h1>
    </header>
    <nav>
      <a id="homePageBtn" href="/"> Home </a>
      <a id="searchPageBtn" href="/search"> Search </a>
      <a id="eventHistoryPageBtn" href="/account"> Profile </a>
      <a id="shoppingCartPageBtn" href="/shoppingCart"> Cart </a>
      <a id="memoryGamePageBtn" href="/memoryGame"> Game </a>
      <a id="adminDashboardPageBtn" href="/adminDashboard"> Dashboard </a>
    </nav>

    <main>
      <div class="header">
        <h1>User Accounts</h1>
        <button
          type="button"
          class="btn btn-danger"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add User
        </button>
      </div>

      <!-- Add and Edit User Form (Modal) -->

      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">New User</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form id="userForm" action="/api/user/create" method="POST">
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    class="form-control"
                    name="firstname"
                    id="firstname"
                    placeholder="First name"
                    required
                  />
                  <label for="firstname" class="form-label">First name</label>
                </div>

                <div class="form-floating mb-3">
                  <input
                    type="text"
                    class="form-control"
                    name="lastname"
                    id="lastname"
                    placeholder="Last name"
                    required
                  />
                  <label for="lastname" class="form-label">Last name</label>
                </div>

                <div class="form-floating mb-3">
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    id="email"
                    placeholder="Email"
                    required
                  />
                  <label for="email" class="form-label">Email address</label>
                </div>

                <div class="form-floating mb-3">
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                    id="password"
                    placeholder="Password"
                    required
                  />
                  <label for="password" class="form-label">Password</label>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button
                type="submit"
                class="btn btn-primary"
                id="userFormSubmitBtn"
              >
                Submit
              </button>
            </div>
          </div>
        </div>
      </div>

      <div id="user-list-wrapper">
        <% userAccounts.forEach((acc, index)=> { %>

        <div class="card" id="<%= acc._id %> ">
          <div class="card-header">
            <div class="name"><%= acc.firstname %> <%= acc.lastname %>
              <% if (user.email === acc.email) { %>
                <span>&lt;Yourself&gt;</span>
                <% } %>
            </div>
            <% if (acc.isAdmin) { %>
            <div class="isAdmin">Admin â›¨</div>
            <% } %>
          </div>
          <div class="card-body">
            <div class="user-content">
              <p>Email: <%= acc.email %></p>
              <p>Password: <%= acc.password %></p>
              <p>Created at: <%= acc.createdAt.toLocaleString() %></p>
            </div>

            <div class="buttons">
              <% if (user.email !== acc.email) { %>
              <button class="btn btn-primary editBtn" type="button">
                Edit
              </button>

              <input
                type="button"
                name="deleteUser"
                class="deleteUser btn secondary-primary"
                value="Delete"
                data-bs-toggle="modal"
                data-bs-target="#delete-modal-<%= index %>"
              />
              <% } %>
              <!-- Modal -->
              <div
                class="modal fade"
                id="delete-modal-<%= index %>"
                tabindex="-1"
                aria-labelledby="deleteConfirmation"
                aria-hidden="true"
              >
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Are you sure?</h5>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <div class="modal-body">
                      This user will be deleted forever!
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Cancel
                      </button>
                      <button
                        type="button"
                        data-bs-dismiss="modal"
                        class="btn btn-primary confirmDeletion"
                      >
                        Delete!
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% }) %>
      </div>
    </main>

    <%- include("./partials/footer"); %>
  </body>
</html>
