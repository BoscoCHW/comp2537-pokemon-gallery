<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <link rel="icon" type="image/png" href="./favicon.png" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/dashboard.style.css" />

    <script type="module" src="/scripts/helpers.js"></script>
    <script defer type="module" src="/scripts/navEventHandlers.js"></script>
    <script defer type="module" src="/scripts/dashboard.js"></script>
    <title>Pokemon App</title>
  </head>
  <body>
    <%- include("./partials/headerAndNav", {user: user}); %>
    <main>
      <div id="user-list-wrapper">
        <h1>User Accounts</h1>
        <% userAccounts.forEach((user, index)=> { %>

        <div class="card" id="<%= user._id %> ">
          <div class="card-header">
            <div class="name"><%= user.firstname %> <%= user.lastname %></div>
            <% if (user.isAdmin) { %>
            <div class="isAdmin">Admin â›¨</div>
            <% } %>
          </div>
          <div class="card-body">
            <div class="user-content">
              <p>Email: <%= user.email %></p>
              <p>Password: <%= user.password %></p>
              <p>Created at: <%= user.createdAt.toLocaleString() %></p>
            </div>

            <div class="buttons">
              <button
                class="btn btn-primary editBtn"
                type="button"
              >
                Edit
              </button>

              <input
                type="button"
                name="deleteEntry"
                class="deleteEntry btn secondary-primary"
                value="Delete"
                data-bs-toggle="modal"
                data-bs-target="#modal<%= index %>"
              />

              <!-- Modal -->
              <div
                class="modal fade"
                id="delete-modal-<%= index %>"
                tabindex="-1"
                aria-labelledby="deleteConfirmation"
                aria-hidden="true"
              >
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Are you sure?</h5>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <div class="modal-body">
                      This user will be deleted forever!
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Cancel
                      </button>
                      <button
                        type="button"
                        data-bs-dismiss="modal"
                        class="btn btn-primary confirmDeletion"
                      >
                        Delete!
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% }) %>
      </div>
    </main>

    <%- include("./partials/footer"); %>
  </body>
</html>
